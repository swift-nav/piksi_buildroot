#!/bin/sh

FLAG_DIR="/persistent/flags/"
NDB_DIR="/persistent/ndb/"
MTD_FILE="/factory/mtd"

name="sbp_fileio_daemon_firmware"
cmd="sbp_fileio_daemon -p 'ipc:///var/run/sockets/fileio_firmware.sub' -s 'ipc:///var/run/sockets/fileio_firmware.pub' --basedir $NDB_DIR --mtd"
dir="/"
user="fileio"

setup_permissions()
{
  configure_file_resource $user $MTD_FILE 0640
  configure_dir_resource_rec $user $NDB_DIR 0755 0644
  configure_dir_resource_rec $user $FLAG_DIR 0444
}

source /etc/init.d/template_runsv.inc.sh
