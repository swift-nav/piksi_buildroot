+static int tscmp(const struct timespec *t1, const struct timespec *t2)
+{
+  if (t1->tv_sec < t2->tv_sec)
+    return (-1);
+  else if (t1->tv_sec > t2->tv_sec)
+    return (1);
+  else if (t1->tv_nsec < t2->tv_nsec)
+    return (-1);
+  else if (t1->tv_nsec > t2->tv_nsec)
+    return (1);
+  else
